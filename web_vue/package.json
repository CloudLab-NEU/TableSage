{
  "name": "tablesage",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && rimraf dist && vite build && electron-builder",
    "build:check": "vue-tsc -b && rimraf dist && vite build",
    "electron:pack": "electron-builder --dir",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "echarts": "^5.6.0",
    "vue": "^3.5.17",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "less": "^4.4.0",
    "rimraf": "^6.0.1",
    "sass": "^1.89.2",
    "typescript": "~5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.8.0",
    "vite": "^7.0.4",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.2.12"
  },
  "build": {
    "appId": "com.example.tablesage",
    "productName": "TableSage",
    "asar": false,
    "copyright": "Copyright Â© 2025 NEU Cloudlab",
    "directories": {
      "output": "release/${version}",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!node_modules",
      "!src",
      "!electron-main",
      "!electron-preload",
      "!public",
      "!*.config.*",
      "!*.md"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "signExts": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
